#include  <stdio.h>  
#include  <string.h>

int    main(void){
int seconds,hour,min,sec,status = 1; 		// først initialiseres alle de nødvendige variabler
while (status == 1){
	
	printf("Give me a number in seconds: \n");  
	scanf("%i",&seconds); 		// den indtastede værdi bliver tildelt variablen
	hour = seconds / 3600; 		// antaltimer udregnes 
	min = seconds % 3600 / 60; 	// der udregnes et antal min
	sec = seconds % 3600 % 60; 	// der udregnes en rest af beløbet i sekunder 
    
	if (hour == 0){
        char hour_c[] = "";
    }else if(hour == 1){
        char hour_c[] = "1 hour";
    }else{
        char hour_c[] = hour + "hours";
    }
    
    if (min == 0){
        char min_c[] = "";
    }else if(hour == 1){
        char min_c[] = "1 minute";
    }else{
        char min_c[] = min + "minutes";
    }
    
    if (sec == 0){
        char sec_c[] = "";
    }else if(sec == 1){
        char sec_c[] = "1 second";
    }else{
        char sec_c[] = sec + "seconds";
    }
    
    
    printf("The result: %s %s %s\n",hour_c,min_c,sec_c);  	
status = 0;
}	
return 0;
}
